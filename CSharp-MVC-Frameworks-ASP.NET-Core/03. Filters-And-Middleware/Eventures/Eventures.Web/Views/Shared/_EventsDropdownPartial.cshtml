@using Microsoft.AspNetCore.Identity
@using Eventures.Models

@inject SignInManager<EventureUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
	<div class="dropdown show">
		<a class="nav-link nav-link-white dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			Events
		</a>
		<div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
			<a asp-controller="Events" asp-area="Event" asp-action="All" class="dropdown-item">All Events</a>
			<a asp-controller="Events" asp-area="Event" asp-action="My" class="dropdown-item">My Events</a>
			@if (this.User.IsInRole("Administrator"))
			{
				<a asp-controller="Events" asp-area="Event" asp-action="Create" class="dropdown-item">Create Event</a>
			}
		</div>
	</div>
}

