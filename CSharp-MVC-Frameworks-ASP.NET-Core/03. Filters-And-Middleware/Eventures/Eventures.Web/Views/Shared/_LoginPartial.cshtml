@using Microsoft.AspNetCore.Identity
@using Eventures.Models

@inject SignInManager<EventureUser> SignInManager
@inject UserManager<EventureUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
				<a asp-area="" asp-controller="Account" asp-action="Profile" class="nav-link nav-link-white">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
				<a asp-area="" asp-controller="Account" asp-action="Logout" class="nav-link nav-link-white">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
			<a asp-controller="Account" asp-action="Register" class="nav-link nav-link-white">Register</a>
		</li>
        <li class="nav-item">
			<a asp-controller="Account" asp-action="Login" class="nav-link nav-link-white">Login</a>
		</li>
    </ul>
}