@model Eventures.Web.Areas.Event.ViewModels.EventureEventInputModel

@{ 
	ViewData["Title"] = "Create Event";
}

<h1 class="text-center">Create Event</h1>
<hr class="hr-3 half-width"/>
<form class="mx-auto half-width" method="post" asp-controller="Events" asp-action="Create">
	<div class="row text-center">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Name">Name</label>
				<input asp-for="Name" class="form-control" placeholder="Name...">
				<span asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label asp-for="Place">Place</label>
				<input asp-for="Place" class="form-control" placeholder="Place...">
				<span asp-validation-for="Place"></span>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Start">Start</label>
				<input asp-for="Start" class="form-control" placeholder="Start Date...">
				<span asp-validation-for="Start"></span>
			</div>
			<div class="form-group">
				<label asp-for="End">End</label>
				<input asp-for="End" class="form-control" placeholder="End Date...">
				<span asp-validation-for="End"></span>
			</div>
		</div>
	</div>
	<div class="row text-center">
		<div class="col-md-6">
			<div class="form-group">
					<label asp-for="TotalTickets">Total Tickets</label>
					<input asp-for="TotalTickets" class="form-control" placeholder="Total Tickets..." />
					<span asp-validation-for="TotalTickets"></span>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
					<label asp-for="PricePerTicket">Price Per Ticket</label>
					<input asp-for="PricePerTicket" class="form-control" placeholder="Price Per Ticket..." />
					<span asp-validation-for="PricePerTicket"></span>
			</div>
		</div>
	</div>
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Create Event</button>
    </div>
</form>
